    script.
      document.querySelector('.sidebar-toggle').onclick = function() {
        const sidebar = document.getElementById('sidebar');
        sidebar.classList.toggle('collapsed');
        const sidebarButtons = document.querySelectorAll('.sidebar-button');
        
        sidebarButtons.forEach(button => {
          button.classList.toggle('collapsed'); // Toggle the collapsed class
        });
      };

      document.querySelector('.about-btn').onclick = function(event) {
        event.preventDefault(); // Prevent the default anchor behavior
        document.getElementById('about-content').style.display = 'block'; // Show the About content
        document.getElementById('contact-content').style.display = 'none'; // Hide the Contact content
        document.querySelector('main > h2').style.display = 'none'; // Hide the main sections title
        const sectionCards = document.querySelectorAll('main .section-card');
        sectionCards.forEach(card => card.style.display = 'none'); // Hide the main content
      };

      document.querySelector('.contact-btn').onclick = function(event) {
        event.preventDefault(); // Prevent the default anchor behavior
        document.getElementById('contact-content').style.display = 'block'; // Show the Contact content
        document.getElementById('about-content').style.display = 'none'; // Hide the About content
        document.querySelector('main > h2').style.display = 'none'; // Hide the main sections title
        const sectionCards = document.querySelectorAll('main .section-card');
        sectionCards.forEach(card => card.style.display = 'none'); // Hide the main content
      };